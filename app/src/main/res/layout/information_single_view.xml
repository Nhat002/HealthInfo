<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="72dp"
    android:background="#ffffffff"
    android:paddingTop="8dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/information_container">
        <RelativeLayout
            android:layout_width="56dp"
            android:layout_height="match_parent"
            android:id="@+id/layout_information_type"
            android:layout_marginLeft="16dp">
            <ImageView
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:id="@+id/information_type"
                android:layout_marginBottom="18dp"
                >
            </ImageView>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@id/layout_information_type"
            android:id="@+id/layout_information_content"
            android:layout_marginLeft="16dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:maxWidth="180dp"
                android:layout_height="wrap_content"
                android:id="@+id/information_title"
                android:textSize="16sp"
                android:paddingRight="4dp"
                android:textColor="#000000"
                ></TextView>
            <TextView
                android:layout_width="56dp"
                android:layout_height="40dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="8dp"
                android:textSize="16sp"
                android:id="@+id/information_date"
                android:textColor="#000000"/>
            <!--<TextView
                android:textSize="13sp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="52dp"
                android:paddingRight="4dp"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:id="@+id/information_content"
                android:layout_below="@id/information_title"
                android:textColor="#000000"
                android:text="@string/read_more"
                ></TextView>-->
           <!-- <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_below="@id/information_date"
                android:id="@+id/information_mark_read"
                android:layout_alignParentRight="true"
                />-->
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>